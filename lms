<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Training Needs Questionnaire</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 700px;
            margin: 50px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        label {
            font-weight: bold;
            color: #555;
        }
        input[type="text"], textarea, select {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        textarea {
            resize: none;
        }
        button {
            padding: 10px;
            font-size: 16px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        .summary {
            margin-top: 20px;
            padding: 15px;
            background-color: #f1f1f1;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Training Needs Questionnaire</h1>
        <form id="trainingForm">
            <!-- General Information -->
            <label for="name">Name</label>
            <input type="text" id="name" name="name" placeholder="Enter your name" required>

            <label for="jobTitle">Job Title</label>
            <input type="text" id="jobTitle" name="jobTitle" placeholder="Enter your job title">

            <label for="goal">Primary Goal</label>
            <textarea id="goal" name="goal" rows="3" placeholder="What is your primary goal for training?" required></textarea>

            <!-- Soft Skills -->
            <label for="softSkills">Which soft skills would you like to improve?</label>
            <select id="softSkills" name="softSkills" multiple>
                <option value="Communication">Communication</option>
                <option value="Leadership">Leadership</option>
                <option value="Time Management">Time Management</option>
                <option value="Problem Solving">Problem Solving</option>
                <option value="Team Collaboration">Team Collaboration</option>
                <option value="Conflict Resolution">Conflict Resolution</option>
                <option value="Public Speaking">Public Speaking</option>
            </select>

            <!-- Technical Skills -->
            <label for="technicalSkills">Which technical skills would you like to improve?</label>
            <textarea id="technicalSkills" name="technicalSkills" rows="3" placeholder="E.g., Python, Data Analysis, Cloud Computing"></textarea>

            <label for="industryFocus">Industry Focus</label>
            <select id="industryFocus" name="industryFocus">
                <option value="Cybersecurity">Cybersecurity</option>
                <option value="Machine Learning">Machine Learning</option>
                <option value="Web Development">Web Development</option>
                <option value="Data Analysis">Data Analysis</option>
                <option value="IT Support">IT Support</option>
                <option value="Cloud Computing">Cloud Computing</option>
            </select>

            <!-- Strengths and Weaknesses -->
            <label for="strengths">Your Strengths</label>
            <textarea id="strengths" name="strengths" rows="3" placeholder="What are your greatest strengths?"></textarea>

            <label for="weaknesses">Areas to Improve</label>
            <textarea id="weaknesses" name="weaknesses" rows="3" placeholder="What areas do you want to improve?"></textarea>

            <!-- Submission -->
            <button type="submit">Submit</button>
        </form>

        <div id="summary" class="summary" style="display: none;">
            <h2>Summary of Your Input</h2>
            <div id="summaryContent"></div>
        </div>
    </div>

    <script>
        document.getElementById('trainingForm').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent form submission

            // Collect user inputs
            const name = document.getElementById('name').value;
            const jobTitle = document.getElementById('jobTitle').value;
            const goal = document.getElementById('goal').value;
            const softSkills = Array.from(document.getElementById('softSkills').selectedOptions).map(option => option.value);
            const technicalSkills = document.getElementById('technicalSkills').value;
            const industryFocus = document.getElementById('industryFocus').value;
            const strengths = document.getElementById('strengths').value;
            const weaknesses = document.getElementById('weaknesses').value;

            // Display summary
            const summaryContent = `
                <p><strong>Name:</strong> ${name}</p>
                <p><strong>Job Title:</strong> ${jobTitle}</p>
                <p><strong>Primary Goal:</strong> ${goal}</p>
                <p><strong>Soft Skills to Improve:</strong> ${softSkills.join(', ') || 'None selected'}</p>
                <p><strong>Technical Skills to Improve:</strong> ${technicalSkills || 'None'}</p>
                <p><strong>Industry Focus:</strong> ${industryFocus}</p>
                <p><strong>Strengths:</strong> ${strengths || 'None'}</p>
                <p><strong>Areas to Improve:</strong> ${weaknesses || 'None'}</p>
            `;

            document.getElementById('summaryContent').innerHTML = summaryContent;
            document.getElementById('summary').style.display = 'block';
        });
    </script>
</body>
</html>
